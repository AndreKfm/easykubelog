<div class="list">

    @foreach (var e in _list)
    {
        <EasyLogService.Components.ListElement ContentDateTime=@e.ContentDateTime
                                               ContentLogOutput=@e.ContentLogOutput
                                               ContentLogContainer=@e.ContentLogContainer
                                               ContentLogType=@e.ContentLogType />
    }

</div>


@code {
    //private int _count = 10;
    public List<Components.ListElement> _list = new List<Components.ListElement>(100);

    public void Set(List<ListElement> newList, Refresh refresh)
    {
        _list = newList;
        if (refresh == Refresh.ImmediatelyRefresh)
            base.InvokeAsync(StateHasChanged);

    }


    public void Add(string elementContent, Refresh refresh)
    {

        _list.Add(new ListElement());
        if (refresh == Refresh.ImmediatelyRefresh)
            base.InvokeAsync(StateHasChanged);

    }
}
